<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="64dp"
    android:minHeight="64dp">

    <TextView
        android:id="@+id/urlTextView"
        style="@style/RegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="seed4.neo.org"
        tools:ignore="HardcodedText"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blockCountTextView"
        style="@style/SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Peers: 125"
        tools:ignore="HardcodedText"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/urlTextView"
        app:layout_constraintTop_toBottomOf="@+id/peerCountTextView" />

    <TextView
        android:id="@+id/peerCountTextView"
        style="@style/SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Block: 125611"
        tools:ignore="HardcodedText"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/blockCountTextView"
        app:layout_constraintTop_toBottomOf="@+id/urlTextView" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/peerCountTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/peerCountTextView" />
</android.support.constraint.ConstraintLayout>
